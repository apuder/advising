<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>AdvisingServlet</servlet-name>
        <servlet-class>edu.sfsu.AdvisingServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AdvisingServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>AdvisingServlet</servlet-name>
        <url-pattern>/lookup-student</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>AdvisingServlet</servlet-name>
        <url-pattern>/update-comment</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>AdvisingServlet</servlet-name>
        <url-pattern>/update-checkpoints</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>AdvisingServlet</servlet-name>
        <url-pattern>/generate-list</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>AdvisingServlet</servlet-name>
        <url-pattern>/generate-advisor-request-list</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>AdvisingServlet</servlet-name>
        <url-pattern>/update-transcribed</url-pattern>
    </servlet-mapping>
</web-app>